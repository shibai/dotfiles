alias rebase="git status --porcelain | sed -ne 's/^UU //p' | xargs bash -c '</dev/tty vi \"$@\"' placeholder && git status --porcelain | sed -ne 's/^UU //p' | xargs bash -c '</dev/tty git add \"$@\"' placeholder && git rebase --continue"

